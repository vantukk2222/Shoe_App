<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.changePassword">

    <RelativeLayout
        android:id="@+id/RelativechangePassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#747ED6">

        <ImageView
            android:id="@+id/left_changepass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_chevron_left_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:gravity="center"
            android:text="Thay đổi mật khẩu"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/LinearLayout_Current"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/RelativechangePassword">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="Mật khẩu cũ"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/currentPassword"
            android:hint="Mật khẩu cũ"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColorHint="#757575"
            android:autofillHints="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_NewPass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/LinearLayout_Current"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mật khẩu mới"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newPassword"
            android:hint="Mật khẩu mới"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:shadowColor="#BAB8B4"
            android:textColorHint="#757575" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_Retype"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/LinearLayout_NewPass">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="Nhập lại"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/retypetPassword"
            android:hint="Nhập lại"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:shadowColor="#BAB8B4"
            android:textColorHint="#757575" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/LinearLayout_Retype">
        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/btn_background"
            android:gravity="center"
            android:text="Thay đổi mật khẩu"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>



</RelativeLayout>
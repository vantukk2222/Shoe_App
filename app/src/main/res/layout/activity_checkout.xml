<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Checkout_Activity"
    android:background="#F3F1F1"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#747ED6">

        <TextView
            android:id="@+id/tvleft_co"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_chevron_left_24"
            android:backgroundTint="@color/white"
            android:paddingTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#747ED6"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Đơn mua"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvleft_co"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgcheckcart_co"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_baseline_shopping_cart_24"
            android:backgroundTint="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:background="@color/white">
            <CheckBox
                android:id="@+id/ChoXacNhan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="Chờ xác nhận"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:textColor="@drawable/radio_text_color_selector"
                android:padding="10dp"/>
            <CheckBox
                android:checked="true"
                android:id="@+id/DangGiao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="Đang giao"
                android:textSize="18sp"
                android:textColor="@drawable/radio_text_color_selector"
                android:layout_marginLeft="10dp"
                android:padding="10dp"/>
            <CheckBox
                android:id="@+id/DaGiao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="Đã giao"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:textColor="@drawable/radio_text_color_selector"
                android:padding="10dp"/>
            <CheckBox
                android:id="@+id/DaHuy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:text="Đã hủy"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:textColor="@drawable/radio_text_color_selector"
                android:padding="10dp"/>
        </LinearLayout>
    </HorizontalScrollView>
    <FrameLayout
        android:id="@+id/fragment_container_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/checkout_item_adapter"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:id="@+id/imageview_ordered_product"
            android:layout_width="95dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/adidas_ozelia_shoes_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageview_ordered_product"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textview_ordered_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_ordered_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá: $20.00"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textview_ordered_product_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số lượng: 2"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView

            android:id="@+id/textview_ordered_product_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xem thêm sản phẩm"
            android:gravity="center"
            android:background="#828AC1"
            android:textSize="24sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>